<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="earthquake_model"
            type="com.udeciti.list.models.Earthquake"
        />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.earthquake.Earthquake"
        android:orientation="vertical"
        android:padding="30dp"
    >
        <LinearLayout
            android:id="@+id/title_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        >
            <TextView
                android:id="@+id/magnitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="4.50"
                android:textSize="60sp"
                android:textColor="@color/blue_156"
                android:textStyle="bold"
                android:text="@{Double.toString(earthquake_model.magnitude)}"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ritcher"
                android:layout_toEndOf="@+id/magnitude"
                android:layout_alignBottom="@+id/magnitude"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/title_section"
            android:layout_margin="20dp"
        >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="95dp"
                android:src="@drawable/ic_baseline_location_on_24"
            />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
            >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Longitude"
                        android:textSize="20sp"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/longitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="20.39834"
                        android:textSize="20sp"
                        android:layout_marginHorizontal="20dp"
                        android:text="@{Double.toString(earthquake_model.lon)}"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Latitude"
                        android:textSize="20sp"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/latitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="20.39834"
                        android:textSize="20sp"
                        android:layout_marginHorizontal="20dp"
                        android:text="@{Double.toString(earthquake_model.lat)}"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_ccc"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
        >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_warning_24"
            />
            <TextView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="kasojdas askljsakd aaskljdasÃ±l"
                android:textSize="17sp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:text="@{earthquake_model.place}"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_ccc"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_access_time_24"
                />
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="28 agosto 2021 18:00"
                android:textSize="17sp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </LinearLayout>
</layout>